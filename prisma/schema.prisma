// Monsa Logos Builder - Database Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      LogoProject[]
  subscription  Subscription?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LogoProject {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyName String
  slogan      String?
  industry    String
  preferences Json
  logos       SavedLogo[]
  brandKit    BrandKit?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([userId])
}

model SavedLogo {
  id            String      @id @default(cuid())
  projectId     String
  project       LogoProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  svgData       Json
  iconId        String
  fontId        String
  paletteId     String
  layoutId      String
  modifications Json?
  isFavorite    Boolean  @default(false)
  isPurchased   Boolean  @default(false)
  exports       Export[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  @@index([projectId])
}

model Icon {
  id         String   @id @default(cuid())
  name       String
  svgPaths   Json
  viewBox    String   @default("0 0 24 24")
  tags       String[]
  industries String[]
  style      String
  fills      Json?
  isPremium  Boolean  @default(false)
  createdAt  DateTime @default(now())
  @@index([tags])
  @@index([industries])
}

model Font {
  id        String   @id @default(cuid())
  name      String   @unique
  family    String
  category  String
  weight    Int      @default(400)
  style     String   @default("normal")
  moods     String[]
  fileUrl   String
  metrics   Json
  isPremium Boolean  @default(false)
  createdAt DateTime @default(now())
  @@index([category])
}

model Palette {
  id            String   @id @default(cuid())
  name          String
  primary       String
  secondary     String
  accent        String
  background    String
  text          String
  category      String
  contrastRatio Float
  createdAt     DateTime @default(now())
  @@index([category])
}

model BrandKit {
  id        String          @id @default(cuid())
  projectId String          @unique
  project   LogoProject     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  templates BrandTemplate[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model BrandTemplate {
  id         String   @id @default(cuid())
  brandKitId String
  brandKit   BrandKit @relation(fields: [brandKitId], references: [id], onDelete: Cascade)
  type       String
  platform   String?
  name       String
  svgData    Json
  dimensions Json
  createdAt  DateTime @default(now())
  @@index([brandKitId])
}

model Export {
  id        String    @id @default(cuid())
  logoId    String
  logo      SavedLogo @relation(fields: [logoId], references: [id], onDelete: Cascade)
  format    String
  colorMode String
  width     Int?
  height    Int?
  fileUrl   String
  fileSize  Int
  createdAt DateTime  @default(now())
  @@index([logoId])
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  plan                 String    @default("free")
  status               String    @default("active")
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}
